<!-- background -->
<div class="usercontainer">
  <div class= "col-md-4 col-me-4 usercontent">
<h2><i class="fa fa-mail-reply"> 忘記密碼 </i></h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <% if false %>
    <%= f.error_notification %>
  <% end %>

  <div class="form-inputs forgetpwdinputform">
    <%= f.input :email,label: false , placeholder: "請輸入Email" , error: '請輸入Email', required: true, autofocus: true %>
  </div>    
  <div class="form-actions">
    <%= f.button :submit, "發送密碼重置信" %>
  </div>
<% end %>
<hr/>
    <div class="renderloginlink">
      <%= link_to "申請加入Dream Job", new_user_registration_path %>
      <%= link_to "已有帳號，前往登入頁面", new_user_session_path, class: "forgetpwd" %>    
    </div>
  </div>
</div>