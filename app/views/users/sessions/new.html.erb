<!-- background -->
<div class="usercontainer">
  <div class= "col-md-4 col-me-4 usercontent">
<h2><i class="fa fa-sign-in"> 登入 </i></h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, label: false ,placeholder: '請輸入常用電子郵件地址' ,required: false, autofocus: true %>
    <%= f.input :password, label: false ,placeholder: '請輸入密碼' , required: false %>        
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    <%= link_to "忘記密碼?", new_user_password_path, class: "forgetpwd" %>        
  </div>

  <div class="form-actions">
    <%= f.button :submit, "登入" %>
  </div>
<% end %>

<hr/>
    <div class="renderloginlink">
      <%= link_to "申請加入Dream Job", new_user_registration_path %>
    </div>
  </div>
</div>
<!-- background end-->
