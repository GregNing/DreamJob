<div class="col-md-10 col-center jobs-content">
<div class= "row">
    <div class="col-md-12 btn-group select-job-box">
        <div class="dropdown btn-group clearfix">
        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        工作地点 <span class="caret"></span>
        </button>
        </div>
    </div>
</div>
<div class="panel panel-default">
<div class="panel-heading">
<h3>求職列表

<div class="pull-right">
<!-- Single button -->
<div class="btn-group">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    排序 <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">    
    <li><%= link_to "刊登時間", jobs_path(order: "descbycreated_at") %></li>
      <li role="separator" class="divider"></li>
    <li><%= link_to "最高薪資", jobs_path(order: "descbywage_upper_bound") %></li>
      <li role="separator" class="divider"></li>
    <li><%= link_to "起薪薪資", jobs_path(order: "descbywage_lower_bound") %></li>
  </ul>
</div>

<% if current_user %>
    <%= link_to("新增工作機會", new_job_path, class: "btn btn-primary pull-right") %>
<% end %>    
</div>
</h3>
</div>

<div class="panel-body">
<table class="table table-boldered table-striped custab">
    <thead>
    <tr>    
        <td>職業</td>
        <td>工作內容</td>
        <td>投遞履歷次數</td>
        <td>最高薪資</td>
        <td>起薪薪資</td>        
        <td>刊登時間</td>
        <td>功能</td>
    </tr>
    </thead>
    <tbody>
    <% @jobs.each do |job| %>
        <tr>            
    <td>
    <%= link_to(job.title, job_path(job)) %>
    </td>
    <td><%=  render_jobs_description(job) %></td>
    <td><%=  job.resumes.count %></td>
    <td><%=  job.wage_upper_bound %></td>
    <td><%=  job.wage_lower_bound %></td>
    <td><%=  job.created_at %></td>
        <td>                
            <%= link_to("Edit", edit_job_path(job), class: "btn btn-xs btn-info")%>
            <%= link_to("Delete", job_path(job),    class: "btn btn-xs btn-danger", 
                        method: :delete, data: { confirm: "Are you sure?" } )%>
        </td>
        </tr>
    <% end %>
    </tbody>
</table>
        <div class="text-center">
            <%= paginate @jobs %>
        </div>
</div>
</div>
</div>