<!-- background -->
<div class="usercontainer">
  <div class= "col-md-4 col-me-4 usercontent">
<h2><i class="fa fa-user-circle-o"> 註冊 </i></h2>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>  
<%= f.error_notification id: 'user_error_message', class: 'form_error' %>
  <div class="form-inputs">
    <%= f.input :email, label: false ,placeholder: '請輸入常用電子郵件地址' ,required: true, autofocus: true %>
    <%= f.input :password,label: false ,placeholder: '請輸入6-12位數密碼' ,required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation,label: false ,placeholder: '再次輸入6-12位數密碼'  ,required: true %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
</div>
<!-- background end-->