<div class="col-md-10 col-md-offset-1 job-form-content">
  <hr style="size:2px" />
  <%= simple_form_for [:admin,@job] do |f| %>
    <div class="form-group">
      <%= f.input :title, :label => false, placeholder: '請輸入職位名稱' %>
      <%= f.input :description, :label => false, placeholder: '請輸入職位描述', input_html: { class: 'job-content-info' } %>
      <%= f.input :company, :label => false, placeholder: '請輸入公司名稱' %>
      <hr />
      <%= f.input :category_id, :label => "職位類型", :collection => Category.isshow.orderbysort, :checked => @job.category, input_html: { class: 'category' } %>
      <%= f.input :location_id, :label => "工作地點", :collection => Location.isshow.orderbysort, :checked => @job.location, input_html: { class: 'location' } %>
      <%= f.input :form_bound, :label => '薪資' do %>
         <%= f.input_field :wage_lower_bound, :as => :string, class: "bound" %> <span class="bound-form">k ~</span>
         <%= f.input_field :wage_upper_bound, :as => :string, class: "bound" %> <span class="bound-form">k</span>
      <% end %>
      <%= f.input :contact_email, label: '聯絡方式', placeholder: 'user@example.com' %>
      <hr />
      <span class="hidden-box"><%= f.input :is_hidden, label: '隱藏職位' %></span>
    </div>
    <div class="form-actions">
      <%= f.submit "送出", disable_with: "Submiting...", class: "button"%>
    </div>
  <% end %>
</div>