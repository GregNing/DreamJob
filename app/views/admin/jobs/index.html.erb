<div class="col-md-10 col-center">
<div class="panel panel-default">
<div class="panel-heading">
<h3>求職列表

<div class="pull-right">
    <%= link_to("新增工作機會", new_admin_job_path, class: "btn btn-primary pull-right") %>
</div>
</h3>
</div>

<div class="panel-body">
<table class="table table-boldered table-striped custab">
    <thead>
    <tr>    
        <td>職業</td>
        <td>工作內容</td>
        <td>上限薪資</td>
        <td>最低薪資</td>        
        <td>刊登時間</td>
        <td>功能</td>
    </tr>
    </thead>
    <tbody>
    <% @jobs.each do |job| %>
        <tr>            
    <td>
    
    <% if job.is_hidden? %>
        <%= link_to ishiddenhelper(job), publish_admin_job_path(job) , method: :post%>
    <% else %>
        
        <%= link_to ishiddenhelper(job), hide_admin_job_path(job) , method: :post%>        
    <% end %>
    
    <%= link_to(job.title, admin_job_path(job)) %>
    </td>
    <td><%=  render_jobs_description(job) %></td>
    <td><%=  job.wage_upper_bound %></td>
    <td><%=  job.wage_lower_bound %></td>
    <td><%=  job.created_at %></td>
        <td>                
            <%= link_to("Edit", edit_admin_job_path(job), class: "btn btn-xs btn-info")%>
            <%= link_to("Delete", admin_job_path(job),    class: "btn btn-xs btn-danger", 
                        method: :delete, data: { confirm: "Are you sure?" } )%>
        </td>
        </tr>
    <% end %>
    </tbody>
</table>
        <div class="text-center">
            <%= paginate @jobs %>
        </div>
</div>
</div>
</div>