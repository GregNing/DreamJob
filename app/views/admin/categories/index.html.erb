<div class="col-md-8 col-md-offset-2 admin-box">
  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <thead>
          <tr>
            <td colspan="6" class="title-box">
              <div class="title"><h2><span class="fa fa-cogs"></span> 職位類型</h2></div>
              <div class="button"><%= link_to("新增職位類型", new_admin_category_path, class: "btn btn-primary pull-right") %></div>
            </td>
          </tr>
        </thead>
        <tbody>
          <% i = 1 %>
          <% @categorys.each do |category| %>
          <% if i%2 == 1%>
          <tr>
          <% end %>
            <td class="name-box"><%= category.sort %> <span class="<%= category.icon %>"></span> <%= category.name %></td>
            <td class="action-box">
              <!-- 修上移/下移/圖示 -->
              <div>
              <%= link_to(up_admin_category_path(category), :method => :post, class: "btn btn-md btn-default sort-btn") do %>
                <span class="fa fa-angle-up"></span>
              <% end %>
              <%= link_to(down_admin_category_path(category), :method => :post, class: "btn btn-md btn-default sort-btn") do %>
                <span class="fa fa-angle-down"></span>
              <% end %>
              <!-- 修上移/下移/圖示 end -->              
              <!--=== 鎖定 不可編輯===-->
              <% if category.is_lock? %>
              <span class="fa fa-pencil btn btn-md btn-default lock-btn" disabled="disabled"></span>
              <span class="fa fa-eye-slash btn btn-md btn-default lock-btn" disabled="disabled"></span>
              <!-- 類型無鎖定 可編輯-->
              <% else %>
                <%= link_to(edit_admin_category_path(category), class: "btn btn-md btn-default") do %>
                  <span class="fa fa-pencil" disabled="disabled"></span>
                <% end %>
              <% end %>
              <!--=== 類型隱藏 ===-->
              <% if category.is_hidden? %>
                <%= link_to(publish_admin_category_path(category), :method => :post, class: "btn btn-md btn-default show-btn") do %>
                <span class="fa fa-eye-slash"></span>
                <% end %>
              <!--=== 類型公開 ===-->
              <% else %>
                <%= link_to(hide_admin_category_path(category), :method => :post, class: "btn btn-md btn-default") do %>                  
                  <span class="fa fa-eye"></span>
                <% end %>
              <% end %>              
              </div>
            </td>
            <% if i%2 == 0%>
              </tr>
            <% end %>
          <% i += 1 %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>