<div class="col-md-6 col-md-offset-3 resume-box">  
  <h2><span class="fa fa-envelope-o"></span> 投遞履歷到 <%= @job.title %> </h2>
  <hr>
  <div class="job-info-box">
    <h3><span class="fa fa-tag"></span> <%= @job.title %><span class="company">  / <%= @job.company %></span></h3>
    <p>
      <span class="bound"><%= @job.wage_lower_bound %> k ~ <%= @job.wage_upper_bound %> k </span> /
      <span><span class="fa fa-map-marker"></span> <%= @job.location.name %></span> /
      <span><span class="<%= @job.category.icon %>"> <%= @job.category.name %></span>
     </p>
    <p class="created"><%= date_add8hour(@job) %> <span class="website">發佈於Dream Job</span></p>
  </div>
  <hr />
  <div>
  <%= simple_form_for [@job,@resume] do |f| %>
    <div>
    <%= f.input :content, label: false , placeholder: '請輸入履歷描述', input_html: { class: 'resume-content' }  %>     
    <%= f.input :attachment_resumes_form ,label: "上傳履歷" do %>      
        <%= f.input :attachment, label: false %>       
    <% end %>
      
    </div>
    <div class="form-actions-resume">
      <%= f.submit "立即投遞", disable_with: "Submiting...", class: "button"%>
    </div>
  <% end %>
  </div>
</div>